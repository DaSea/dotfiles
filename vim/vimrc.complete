" Plug 'neovim/nvim-lspconfig'
if has("nvim")
    Plug 'williamboman/nvim-lsp-installer'
endif
Plug 'SirVer/ultisnips'
Plug 'jayli/vim-easycomplete'

nnoremap gr :EasyCompleteReference<CR>
nnoremap gd :EasyCompleteGotoDefinition<CR>
